@page
@using CadastroCliente.Pages.Shared
@model CadastroCliente.Pages.DeleteModel

@{
    ViewData["Title"] = "Excluir Fornecedor";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="bg-white p-4 rounded-3 shadow-sm border-start border-danger border-5">
            <h1 class="display-6 fw-bold text-danger mb-2">
                <i class="fas fa-trash me-3"></i>Excluir Fornecedor
            </h1>
            <p class="text-secondary mb-0 fs-5">Confirme a exclusão do fornecedor do sistema</p>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12">
        <div class="alert alert-warning border-0 shadow-sm rounded-3 mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle text-warning me-3" style="font-size: 2rem;"></i>
                <div>
                    <h5 class="alert-heading fw-bold mb-1">Atenção!</h5>
                    <p class="mb-0">Tem certeza de que deseja excluir este fornecedor? Esta ação não poderá ser desfeita.</p>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-danger text-white py-3">
                        <h5 class="card-title mb-0 fw-bold">
                            <i class="fas fa-user me-2"></i>Dados do Fornecedor
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="bg-light p-3 rounded-3 border-start border-primary border-3">
                                    <dt class="text-primary fw-bold mb-2">
                                        <i class="fas fa-user me-2"></i>@Html.DisplayNameFor(model => model.Fornecedor.Nome)
                                    </dt>
                                    <dd class="fs-5 fw-medium text-dark mb-0">
                                        @Html.DisplayFor(model => model.Fornecedor.Nome)
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="bg-light p-3 rounded-3 border-start border-secondary border-3">
                                    <dt class="text-secondary fw-bold mb-2">
                                        <i class="fas fa-id-card me-2"></i>@Html.DisplayNameFor(model => model.Fornecedor.Cnpj)
                                    </dt>
                                    <dd class="fs-5 fw-medium text-dark mb-0">
                                        <span class="badge bg-secondary fs-6">@Html.DisplayFor(model => model.Fornecedor.Cnpj)</span>
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="bg-light p-3 rounded-3 border-start border-primary border-3">
                                    <dt class="text-primary fw-bold mb-2">
                                        <i class="fas fa-industry me-2"></i>@Html.DisplayNameFor(model => model.Fornecedor.Segmento)
                                    </dt>
                                    <dd class="fs-5 fw-medium text-dark mb-0">
                                        <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.Fornecedor.Segmento)</span>
                                    </dd>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="bg-light p-3 rounded-3 border-start border-secondary border-3">
                                    <dt class="text-secondary fw-bold mb-2">
                                        <i class="fas fa-map-pin me-2"></i>@Html.DisplayNameFor(model => model.Fornecedor.Cep)
                                    </dt>
                                    <dd class="fs-5 fw-medium text-dark mb-0">
                                        @Html.DisplayFor(model => model.Fornecedor.Cep)
                                    </dd>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="bg-light p-3 rounded-3 border-start border-primary border-3">
                                    <dt class="text-primary fw-bold mb-2">
                                        <i class="fas fa-home me-2"></i>@Html.DisplayNameFor(model => model.Fornecedor.Endereco)
                                    </dt>
                                    <dd class="fs-5 fw-medium text-dark mb-0">
                                        @Html.DisplayFor(model => model.Fornecedor.Endereco)
                                    </dd>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="card-title mb-0 fw-bold">
                            <i class="fas fa-image me-2"></i>Foto do Fornecedor
                        </h5>
                    </div>
                    <div class="card-body p-4 d-flex align-items-center justify-content-center">
                        @if (Model.Fornecedor.FotoUrl != null && Model.Fornecedor.FotoUrl.Length > 0)
                        {
                            var data = await Model._helper.GetImage(Model.Fornecedor.FotoUrl);
                            <div class="text-center">
                                <img src="@data"
                                     alt="Foto do Fornecedor"
                                     class="img-fluid rounded-3 shadow border border-3 border-primary"
                                     style="max-width: 100%; max-height: 300px; object-fit: cover;" />
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <div class="bg-light rounded-3 p-4 border border-2 border-dashed">
                                    <i class="fas fa-image text-secondary" style="font-size: 4rem;"></i>
                                    <p class="text-secondary mt-3 mb-0 fw-medium">Nenhuma imagem disponível</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-danger shadow-sm">
                    <div class="card-body p-4 text-center">
                        <form method="post" class="d-inline">
                            <input type="hidden" asp-for="Fornecedor.Id" />
                            <div class="d-flex gap-3 justify-content-center">
                                <button type="submit" class="btn btn-danger btn-lg shadow-sm px-5">
                                    <i class="fas fa-trash me-2"></i>Confirmar Exclusão
                                </button>
                                <a asp-page="./Index" class="btn btn-secondary btn-lg shadow-sm px-5">
                                    <i class="fas fa-arrow-left me-2"></i>Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
