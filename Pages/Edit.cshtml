@page
@model CadastroCliente.Pages.Fornecedores.EditModel

@{
    ViewData["Title"] = "Editar Fornecedor";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="bg-white p-4 rounded-3 shadow-sm border-start border-warning border-5">
            <h1 class="display-6 fw-bold text-warning mb-2">
                <i class="fas fa-edit me-3"></i>Editar Fornecedor
            </h1>
            <p class="text-secondary mb-0 fs-5">Atualize as informações do fornecedor</p>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10">
        <div class="card shadow border-0">
            <div class="card-header bg-warning text-dark py-3">
                <h5 class="card-title mb-0 fw-bold">
                    <i class="fas fa-user-edit me-2"></i>Dados do Fornecedor
                </h5>
            </div>
            <div class="card-body p-4">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 border-0 shadow-sm" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                    </div>
                    
                    <input type="hidden" asp-for="Fornecedor.Id" />
                    
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Fornecedor.Nome" class="form-control" placeholder="Nome do Fornecedor" />
                                <label asp-for="Fornecedor.Nome" class="text-primary fw-medium">
                                    <i class="fas fa-user me-2"></i>Nome do Fornecedor
                                </label>
                                <span asp-validation-for="Fornecedor.Nome" class="text-danger fw-medium mt-1 d-block"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Fornecedor.Cnpj" class="form-control" placeholder="CNPJ" readonly/>
                                <label asp-for="Fornecedor.Cnpj" class="text-primary fw-medium">
                                    <i class="fas fa-id-card me-2"></i>CNPJ
                                </label>
                                <span asp-validation-for="Fornecedor.Cnpj" class="text-danger fw-medium mt-1 d-block"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                <select asp-for="Fornecedor.Segmento" asp-items="Html.GetEnumSelectList<CadastroCliente.Model.Fornecedor.Segmento>()" class="form-select">
                                    <option value="">Selecione um segmento</option>
                                </select>
                                <label asp-for="Fornecedor.Segmento" class="text-primary fw-medium">
                                    <i class="fas fa-industry me-2"></i>Segmento
                                </label>
                                <span asp-validation-for="Fornecedor.Segmento" class="text-danger fw-medium mt-1 d-block"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Fornecedor.Cep" class="form-control" placeholder="CEP" />
                                <label asp-for="Fornecedor.Cep" class="text-primary fw-medium">
                                    <i class="fas fa-map-pin me-2"></i>CEP
                                </label>
                                <span asp-validation-for="Fornecedor.Cep" class="text-danger fw-medium mt-1 d-block"></span>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Fornecedor.Endereco" class="form-control" placeholder="Endereço Completo" readonly/>
                                <label asp-for="Fornecedor.Endereco" class="text-primary fw-medium">
                                    <i class="fas fa-home me-2"></i>Endereço Completo
                                </label>
                                <span asp-validation-for="Fornecedor.Endereco" class="text-danger fw-medium mt-1 d-block"></span>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="border border-2 border-primary rounded-3 p-4 bg-light">
                                <label class="form-label text-primary fw-bold mb-3">
                                    <i class="fas fa-camera me-2"></i>Foto do Fornecedor
                                </label>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-upload text-primary" style="font-size: 2rem;"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <input asp-for="Foto" type="file" class="form-control form-control-lg" id="Foto" name="Foto" accept="image/*" />
                                        <div class="form-text text-secondary mt-2">
                                            <i class="fas fa-info-circle me-1"></i>Selecione uma imagem para o fornecedor
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="Fornecedor.FotoUrl" class="text-danger fw-medium mt-2 d-block"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-3 justify-content-center mt-5">
                        <button type="submit" class="btn btn-warning btn-lg shadow-sm px-5 text-dark fw-bold">
                            <i class="fas fa-save me-2"></i>Salvar Alterações
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary btn-lg shadow-sm px-5">
                            <i class="fas fa-arrow-left me-2"></i>Voltar à Lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts { 

        <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cepInput = document.querySelector('input[name="Fornecedor.Cep"]');
            
            if (cepInput) {
                
                cepInput.addEventListener('input', function() {
                    const cep = this.value.replace(/\D/g, ''); 
                 
                        BuscarCEP(cep);
                    
                });
                
                
                cepInput.addEventListener('blur', function() {
                    const cep = this.value.replace(/\D/g, ''); 
                    if (cep.length === 8) {
                        BuscarCEP(cep);
                    }
                });
            }
        });
    </script>


    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
